<div class="container">
  <div class="row">
    <% @lists.each do |list| %>
        <%= link_to list_path(list), class:'text-decoration-none' do %>
        <% if list.thumbnail.attached? %>
          <div class="card-list" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.thumbnail.key, height: 180, crop: :fill %>')">
            <%= list.name %>
          </div>
        <% else %>
          <div class="card-list" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= asset_path 'default-thumbnail.jpg', height: 180, crop: :fill %>')">
            <%= list.name %>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
